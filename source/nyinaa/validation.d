module nyinaa.validation;

import std.regex : matchFirst, ctRegex;

/**
* Checks whether an string has an email address format
* 
* Params:
*      email = the email address to do check on
*
*  Example:
* ---
*      import nyinaa.validation: isEmail;
*
*      void main()
*      {
*          string email = "hello@example.com";
*          string notEmail = "nah!";
*          assert(isEmail(email));
*          assert(!isEmail(notEmail));
*      }
* ---
*/
bool isEmail(string email)
{
    auto ctr = ctRegex!r"^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$";

    return email.matchFirst(ctr).length == 1;
}

unittest
{
    assert(isEmail("hello@example.com"));
    assert(!isEmail("nah!"));
}

/**
* Checks whether an string has an IP address format (both IPv4 and IPv6)
* 
* Params:
